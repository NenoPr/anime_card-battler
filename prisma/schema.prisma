generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  decks     Deck[]
}

model Deck {
  id        String  @id @default(cuid())
  name      String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  cards     Card[]
}

model Card {
  id        String  @id @default(cuid())
  name      String
  type      String
  attack    Int
  defense   Int
  imageUrl  String?
  deck      Deck?   @relation(fields: [deckId], references: [id])
  deckId    String?
}
